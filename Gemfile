source 'https://rubygems.org'

# Sinatra
gem 'sinatra'

# Sinatra ActiveRecord Extension
gem 'sinatra-activerecord'
gem 'mysql2'
gem 'rake'

# Sidekiq
gem 'sidekiq'

# AWS SDK
gem 'aws-sdk', '~> 2'

# Dotenv
gem 'dotenv'

# RSpec
group :developmen, :test do
  gem 'rspec'
  gem 'rack-test'
  %w(rspec-core rspec-expectations rspec-mocks rspec-support).each do |lib|
    gem lib
  end
end
